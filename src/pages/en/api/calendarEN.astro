---
import Layout from "@layouts/Layout.astro";
import Form from "@components/calendar/Form";

const URL = Astro.url;
---

<Layout title="Ecommetrica - Calendario">
  <div class="max-w-3xl mx-auto p-8 bg-white rounded-lg shadow-lg">
    <div class="mb-6">
      <a
        href="javascript:history.back()"
        class="text-blue-600 hover:text-blue-800 font-semibold"
      >
        &larr; Return to main page
      </a>
    </div>
    <h1 class="text-4xl font-extrabold text-gray-900 mb-6">
      Ecommetrica calendar
    </h1>
    <p class="text-lg text-gray-700 mb-8">
      Please complete the form below to add events to your calendar.
    </p>
    <Form client:load URL={URL} />
  </div>
</Layout>
