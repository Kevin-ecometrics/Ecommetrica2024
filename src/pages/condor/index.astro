---
import Layout from "@layouts/Layout.astro";
import Video from "@components/condor/Hero.astro";

const nav = [
  { name: "Nosotros", href: "/condor/about/" },
  { name: "Servicios", href: "/condor/services/" },
  { name: "Contacto", href: "/condor/contact/" },
];
---

<Layout title="TheCondorVision">
  <div class="hidden md:block">
    <main>
      <aside class="absolute z-10">
        <img src="/condor/dronlogo.png" class="w-32 h-32 p-8" alt="logo" />
        <div class="px-8 mt-8">
          <ol class="uppercase *:font-bold">
            {
              nav.map((item) => (
                <a
                  href={item.href}
                  class="text-white p-2 block hover:text-[#2d83c3] relative overflow-hidden"
                >
                  {item.name}
                  <span class="absolute h-[2px] bg-[#2d83c3] " />
                </a>
              ))
            }
          </ol>
        </div>
      </aside>
      <div
        class="z-10 absolute w-[30%] md:w-[80%] mx-auto h-screen text-center md:flex justify-center items-center inset-0"
      >
        <h1
          class="md:text-[55px] break-words text-white mb-36 font-bold absolute"
        >
          Revoluciona tu visión, vive la experiencia
        </h1>
        <p class="text-[30px] font-bold left-1/2 mt-24 text-white">
          Sumérgete a una aventura sensorial única en México.
        </p>
        <div
          class="absolute flex items-center justify-center mt-56 inset-0 gap-4"
        >
          <a href="#" target="_blank" class="p-2 bg-blue-500 rounded-full">
            <img
              src="https://cdn.simpleicons.org/facebook/ffffff"
              class="size-8"
            />
          </a>
          <a href="#" target="_blank" class="p-2 bg-blue-500 rounded-full">
            <img
              src="https://cdn.simpleicons.org/instagram/ffffff"
              class="size-8"
            />
          </a>
          <a href="#" target="_blank" class="p-2 bg-blue-500 rounded-full">
            <img
              src="https://cdn.simpleicons.org/youtube/ffffff"
              class="size-8"
            />
          </a>
        </div>
      </div>
    </main>
    <Video />
    <div class="linea-vertical">
      <div class="circulo">
        <a href="/condor/gallery/">
