  <style>
    .linea-vertical {
      position: fixed;
      top: 0;
      right: 5%;
      height: 100%;
      width: 4px;
      background-color: #2d83c3;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }

    .circulo {
      width: 90px;
      height: 90px;
      background-color: #2d83c3;
      border-radius: 50%;
      margin: 20px;
    }
  </style>
