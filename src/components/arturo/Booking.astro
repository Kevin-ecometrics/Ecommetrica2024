<section class="container mx-auto my-20 px-4">
  <h2
    class="text-center text-4xl md:text-8xl text-[#AC463F] font-bold font-montserrat mb-4"
  >
    Agenda tu cita
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 my-8">
    <div class="flex justify-center">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3363.8119674595487!2d-117.11935808842692!3d32.531168596399496!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80d94b222bf089c3%3A0xf5db170685ab6a04!2sDoctor%20Arturo%20L%C3%B3pez%20%7C%20Antiedad%20y%20Bienestar!5e0!3m2!1ses!2smx!4v1756323608427!5m2!1ses!2smx"
        width="100%"
        height="450"
        class="rounded-lg shadow-lg max-w-full"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      >
      </iframe>
    </div>
    <div class="flex justify-center">
      <div class="bg-white rounded-lg shadow-lg p-6 w-full max-w-md">
        <form class="space-y-4">
          <!-- Título -->
          <h3 class="text-xl font-semibold text-gray-800 text-center mb-6">
            CREAR CITA
          </h3>

          <!-- Dirección -->
          <div class="flex items-start space-x-2 text-sm text-gray-600 mb-6">
            <svg
              class="w-4 h-4 text-orange-500 mt-0.5 flex-shrink-0"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                clip-rule="evenodd"></path>
            </svg>
            <span
              >Paseo Ensenada 721-1. Playas de Tijuana, Baja California, CP
              22500</span
            >
          </div>

          <!-- Campo de fecha y hora -->
          <div>
            <input
              type="datetime-local"
              placeholder="Elige fecha y hora"
              class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#AC463F] focus:border-transparent text-gray-500"
            />
          </div>

          <!-- Nombre completo -->
          <div>
            <input
              type="text"
              placeholder="Nombre completo *"
              class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#AC463F] focus:border-transparent"
              required
            />
          </div>

          <!-- Correo electrónico -->
          <div>
            <input
              type="email"
              placeholder="Correo electrónico *"
              class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#AC463F] focus:border-transparent"
              required
            />
          </div>

          <!-- Número de teléfono -->
          <div>
            <input
              type="tel"
              placeholder="Número de teléfono *"
              class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#AC463F] focus:border-transparent"
              required
            />
          </div>

          <!-- Botón de envío -->
          <button
            type="submit"
            class="w-full bg-[#AC463F] hover:bg-[#8B3730] text-white font-medium py-3 px-4 rounded-md transition duration-200 mt-6"
          >
            REALIZAR CITA
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
