<section class="p-16 mb-32 bg-custom-bg relative" id="service">
  <div class="container mx-auto">
    <div class="md:grid grid-cols-2 gap-4">
      <!-- Encabezado y Descripción -->
      <div class="col-span-1 p-4">
        <h1 class="text-[#861453] text-2xl font-bold mb-4">
          Listos para dar vida a tus proyectos
        </h1>
        <h2 class="text-5xl text-[#515151] font-bold mb-8">
          Nuestros Servicios
        </h2>
        <p class="mb-8">
          Adicionalmente a nuestro servicio de asesoramiento, nos interesamos
          por crear estrategias y tecnología para diferentes comercios con un
          equipo multidisciplinario en mercadotenica digital y producción.
        </p>
      </div>

      <!-- Servicios -->
      {
        services.map((service) => (
          <div class="service-card mb-4 p-4 border border-gray-300 rounded bg-white h-[280px] md:w-[670px] relative z-10">
            <h2 class="text-2xl mb-4 font-semibold">{service.name}</h2>
            <p class="text-xl font-bold mb-2">
              The price starts from:{" "}
              <span class="text-[#861453] font-bold">$49</span>
            </p>
            <p class="text-gray-700">{service.description}</p>
          </div>
        ))
      }

      <!-- Preguntas -->
      <div class="col-span-1 p-4 text-center font-bold">
        <h1 class="text-2xl font-bold mb-4">¿Alguna pregunta?</h1>
        <h2 class="text-2xl mb-4">Nos encanta responder</h2>
        <button
          class="px-4 py-2 text-black border border-[#861453] rounded hover:bg-[#861453] hover:text-white"
        >
          <a class="flex items-center gap-4" href="#contact">
            <h1>preguntar</h1>
            <svg
              width="18"
              height="13"
              viewBox="0 0 18 13"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M15.5427 1.11621H2.45808C1.59779 1.11621 0.900391 1.71876 0.900391 2.46204V10.537C0.900391 11.2803 1.59779 11.8829 2.45808 11.8829H15.5427C16.403 11.8829 17.1004 11.2803 17.1004 10.537V2.46204C17.1004 1.71876 16.403 1.11621 15.5427 1.11621Z"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
              <path
                d="M3.6377 3.8877L8.7002 8.04395L13.7627 3.8877"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </button>
      </div>
    </div>
  </div>
  <div
    class="absolute w-96 h-52 left-[-100px] bg-[#861453] animate-div hidden xl:block"
  >
  </div>
  <div
    class="absolute w-52 h-96 top-0 right-[-150px] bg-[#861453] animate-div-2 hidden xl:block"
  >
  </div>
</section>

<style>
  .service-card {
    perspective: 1000px;
    transition: transform 0.3s ease;
  }

  .service-card:hover {
    transform: rotateY(15deg) rotateX(15deg);
  }

  @keyframes slideX {
    0% {
      transform: translateX(-50%) translateY(-50px);
    }
    50% {
      transform: translateX(25%) translateY(-50px);
    }
    100% {
      transform: translateX(-50%) translateY(-50px);
    }
  }

  @keyframes slideY {
    0% {
      transform: translateY(0) translateX(-100px);
    }
    50% {
      transform: translateY(100%) translateX(-100px);
    }
    100% {
      transform: translateY(0) translateX(-100px);
    }
  }

  .animate-div {
    animation: slideX 5s infinite;
  }

  .animate-div-2 {
    animation: slideY 5s infinite;
  }
</style>
